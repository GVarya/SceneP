<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="31dp"
        android:textColor="#ffba00"
        android:text="Добро пожаловать в (название придумаю потом) выберите способ работы"


        android:textAlignment="center"
        android:textSize="25dp" />

    <Button
        android:id="@+id/to_scenes"
        android:layout_width="137dp"
        android:layout_height="71dp"
        android:layout_below="@id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="207dp"
        android:background="#ffba00"
        android:text="Сцены" />

    <Button
        android:id="@+id/to_spotlight"
        android:layout_width="137dp"
        android:layout_height="71dp"
        android:layout_below="@id/to_scenes"
        android:background="#ffba00"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="прожектора" />

</RelativeLayout>